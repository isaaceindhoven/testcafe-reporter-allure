{
  "name": "testcafe-reporter-isaac",
  "version": "0.1.0",
  "description": "An Allure reporter plugin for TestCaf√©. Used to generate test reports for e2e-tests.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isaaceindhoven/testcafe-reporter-isaac.git"
  },
  "author": "ISAAC E-commerce Solutions BV",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/isaaceindhoven/testcafe-reporter-isaac/issues"
  },
  "homepage": "https://github.com/isaaceindhoven/testcafe-reporter-isaac#readme",
  "scripts": {
    "version": "node -v",
    "build": "tsc",
    "test:lint": "eslint {src,tests}/**/*.{ts,js}",
    "test:lint:fix": "eslint {src,tests}/**/*.{ts,js} --fix",
    "test:unit": "jest",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:unit && npm run test:lint:fix",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "prettier": "^2.0.4",
    "semantic-release": "^17.0.4",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {}
}
